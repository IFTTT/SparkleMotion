<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ifttt.sparklemotiondemo">

    <application
        android:allowBackup="true"
        android:label="@string/label_application"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/JazzTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/label_activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".AlphaViewPagerActivity"/>

        <activity android:name=".ScaleViewPagerActivity"/>

        <activity android:name=".RotationViewPagerActivity"/>

        <activity android:name=".ParallaxViewPagerActivity"/>

        <activity android:name=".ZoomOutViewPagerActivity"/>

        <activity android:name=".PathAndTranslationViewPagerActivity"/>

    </application>

</manifest>
